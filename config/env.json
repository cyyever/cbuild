{
  "conditional_base_environment_variable": {
    "unix": [
      "MAX_JOBS=$((CPU_COUNT-1))"
    ],
    "unix&&!docker": [
      "INSTALL_PREFIX=${HOME}/opt"
    ],
    "unix&&docker": [
      "INSTALL_PREFIX=/opt"
    ],
    "windows": [
      "INSTALL_PREFIX=$home/opt",
      "MAX_JOBS=(($env:CPU_COUNT-1))"
    ]
  },
  "conditional_environment_variable": {
    "all_os": [
      "run_test=0",
      "static_analysis=0",
      "pvs_static_analysis=0",
      "clang_tidy_static_analysis=0",
      "PYTHONUTF8=1",
      "CMAKE_EXPORT_COMPILE_COMMANDS=1",
      "CMAKE_GENERATOR=Ninja",
      "CMAKE_BUILD_PARALLEL_LEVEL=${MAX_JOBS}",
      "CTEST_PARALLEL_LEVEL=${MAX_JOBS}",
      "GOPATH=${INSTALL_PREFIX}/gopath",
      "CPATH=${INSTALL_PREFIX}/include:${CPATH:-}",
      "CUDAARCHS=80",
      "CUDNN_ROOT_DIR=${INSTALL_PREFIX}/cudnn"
    ],
    "all_os&&!docker": [
      "run_test=1"
    ],
    "linux": [
      "CC=gcc",
      "CXX=g++"
    ],
    "unix": [
      "FC=gfortran",
      "CFLAGS=-march=native",
      "CXXFLAGS=-march=native",
      "LD_LIBRARY_PATH=${INSTALL_PREFIX}/gcc/releases/gcc-11.2.0/lib64:${INSTALL_PREFIX}/CUDA/targets/x86_64-linux/lib:${INSTALL_PREFIX}/CUDA/lib64:${INSTALL_PREFIX}/cudnn/lib:${INSTALL_PREFIX}/cudnn/lib64:${INSTALL_PREFIX}/lib:${INSTALL_PREFIX}/python/lib:/usr/local/lib:${INSTALL_PREFIX}/lib64:${LD_LIBRARY_PATH:-}",
      "LIBRARY_PATH=${LD_LIBRARY_PATH}:${LIBRARY_PATH:-}",
      "PKG_CONFIG_PATH=${INSTALL_PREFIX}/lib64/pkgconfig:${INSTALL_PREFIX}/lib/pkgconfig:${PKG_CONFIG_PATH:-}",
      "PATH=${INSTALL_PREFIX}/gcc/releases/gcc-11.2.0/bin:${INSTALL_PREFIX}/bin:${INSTALL_PREFIX}/python/bin:${PATH:-}",
      "PYTHONVERSION=3.10",
      "PYTHONPATH=${INSTALL_PREFIX}/python/lib/python${PYTHONVERSION}/site-packages:${PYTHONPATH:-}",
      "CBUILD_PYTHON_EXE=${INSTALL_PREFIX}/python/bin/python3",
      "CUDA_HOME=${INSTALL_PREFIX}/CUDA",
      "CUDACXX=${CUDA_HOME}/bin/nvcc",
      "CUDA_HOST_COMPILER=/usr/bin/g++-11",
      "CCBIN=${CUDA_HOST_COMPILER}",
      "CUDAHOSTCXX=${CUDA_HOST_COMPILER}"
    ],
    "freebsd": [
      "CC=clang",
      "CXX=clang++",
      "CPATH=/usr/local/include:${CPATH:-}",
      "CPLUS_INCLUDE_PATH=/usr/local/include:${CPLUS_INCLUDE_PATH:-}",
      "C_INCLUDE_PATH=/usr/local/include:${C_INCLUDE_PATH:-}"
    ],
    "unix&&machine_learning_compilers": [
      "CC=clang",
      "CXX=clang++"
    ],
    "unix&&use_mold": [
      "LDFLAGS=-B${INSTALL_PREFIX}/usr/local/libexec/mold ${LDFLAGS:-}"
    ],
    "windows": [
      "FC=c:/oneAPI/compiler/latest/windows/bin/ifx.exe",
      "CBUILD_PYTHON_EXE=python.exe",
      "PKG_CONFIG_PATH=${INSTALL_PREFIX}/lib64/pkgconfig;${INSTALL_PREFIX}/lib/pkgconfig",
      "PATH=${INSTALL_PREFIX}/bin;${INSTALL_PREFIX}/lib;C:/tools/msys64;C:/tools/msys64/mingw64/bin;${PATH}",
      "INCLUDE=${INSTALL_PREFIX}/include;${INCLUDE}"
    ],
    "docker": [
      "CBUILD_PYTHON_EXE=/usr/bin/python3"
    ],
    "feature_language_golang": [
      "GOPROXY=https://goproxy.io",
      "GO111MODULE=on"
    ],
    "!debug_build": [
      "BUILD_TYPE=Release"
    ],
    "debug_build": [
      "BUILD_TYPE=Debug"
    ]
  }
}
