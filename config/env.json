{
  "conditional_base_environment_variable": {
    "unix": [
      "MAX_JOBS=$((CPU_COUNT-1))"
    ],
    "unix&&!docker": [
      "INSTALL_PREFIX=${HOME}/opt"
    ],
    "unix&&docker": [
      "INSTALL_PREFIX=/opt"
    ],
    "windows": [
      "INSTALL_PREFIX=$home/opt",
      "MAX_JOBS=(($env:CPU_COUNT-1))"
    ]
  },
  "conditional_environment_variable": {
    "all_os": [
      "run_test=0",
      "static_analysis=0",
      "pvs_static_analysis=0",
      "clang_tidy_static_analysis=0",
      "CMAKE_EXPORT_COMPILE_COMMANDS=1",
      "CMAKE_GENERATOR=Ninja",
      "CMAKE_BUILD_PARALLEL_LEVEL=${MAX_JOBS}",
      "CTEST_PARALLEL_LEVEL=${MAX_JOBS}",
      "GOPATH=${INSTALL_PREFIX}/gopath",
      "CPATH=${INSTALL_PREFIX}/include",
      "CUDAARCHS=75",
      "CUDNN_ROOT_DIR=${INSTALL_PREFIX}/cudnn"
    ],
    "all_os&&!docker": [
      "run_test=1"
    ],
    "unix": [
      "FC=gfortran",
      "CFLAGS=-march=native",
      "CXXFLAGS=-march=native",
      "LD_LIBRARY_PATH=${INSTALL_PREFIX}/CUDA/targets/x86_64-linux/lib:${INSTALL_PREFIX}/CUDA/lib64:${INSTALL_PREFIX}/cudnn/lib:${INSTALL_PREFIX}/cudnn/lib64:${INSTALL_PREFIX}/lib:${INSTALL_PREFIX}/python/lib:/usr/local/lib:${INSTALL_PREFIX}/lib64:${LD_LIBRARY_PATH:-}",
      "LIBRARY_PATH=${LD_LIBRARY_PATH}:${LIBRARY_PATH:-}",
      "PKG_CONFIG_PATH=${INSTALL_PREFIX}/lib64/pkgconfig:${INSTALL_PREFIX}/lib/pkgconfig:${PKG_CONFIG_PATH:-}",
      "PATH=${INSTALL_PREFIX}/bin:${INSTALL_PREFIX}/python/bin:${PATH:-}",
      "PYTHONVERSION=3.10",
      "PYTHONPATH=${INSTALL_PREFIX}/lib/python${PYTHONVERSION}/site-packages:${PYTHONPATH:-}",
      "CBUILD_PYTHON_EXE=${INSTALL_PREFIX}/python/bin/python3",
      "CUDA_HOME=${INSTALL_PREFIX}/CUDA",
      "CUDACXX=${CUDA_HOME}/bin/nvcc",
      "CUDA_HOST_COMPILER=/usr/bin/c++",
      "CCBIN=${CUDA_HOST_COMPILER}",
      "CUDAHOSTCXX=${CUDA_HOST_COMPILER}"
    ],
    "freebsd": [
      "CC=clang",
      "CXX=clang++",
      "FC=gfortran11",
      "PATH=/compat/linux/bin:${PATH:-}",
      "CPATH=/usr/local/include:${CPATH-}",
      "CPLUS_INCLUDE_PATH=/usr/local/include:${CPLUS_INCLUDE_PATH-}",
      "C_INCLUDE_PATH=/usr/local/include:${C_INCLUDE_PATH-}"
    ],
    "unix&&machine_learning_compilers": [
      "CC=/usr/bin/clang",
      "CXX=/usr/bin/clang++"
    ],
    "ubuntu": [
      "CUDA_HOST_COMPILER=/usr/bin/g++-9",
      "CCBIN=${CUDA_HOST_COMPILER}",
      "CUDAHOSTCXX=${CUDA_HOST_COMPILER}"
    ],
    "windows": [
      "CBUILD_PYTHON_EXE=$home/AppData/Local/Programs/Python/Python310/python.exe",
      "PKG_CONFIG_PATH=${INSTALL_PREFIX}/lib64/pkgconfig;${INSTALL_PREFIX}/lib/pkgconfig",
      "PATH=${INSTALL_PREFIX}/bin;${INSTALL_PREFIX}/lib;${PATH};C:/tools/msys64/usr/lib/gcc/x86_64-pc-msys/10.2.0/;C:/tools/msys64/usr/bin;C:/tools/msys64"
    ],
    "archlinux&&machine_learning_compilers": [
      "CUDA_HOST_COMPILER=/usr/bin/g++",
      "CUDAHOSTCXX=${CUDA_HOST_COMPILER}"
    ],
    "archlinux&&!docker": [
      "PATH=${INSTALL_PREFIX}/gcc/releases/gcc-11/bin:${PATH:-}"
    ],
    "docker": [
      "CBUILD_PYTHON_EXE=/usr/bin/python3"
    ],
    "feature_language_golang": [
      "GOPROXY=https://goproxy.io",
      "GO111MODULE=on"
    ],
    "!debug_build": [
      "BUILD_TYPE=Release"
    ],
    "debug_build": [
      "BUILD_TYPE=Debug"
    ]
  }
}
