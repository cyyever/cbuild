{
  "conditional_base_environment_variable": {
    "unix": [
      "MAX_JOBS=$((${CPU_COUNT}-1))"
    ],
    "unix&&!docker": [
      "INSTALL_PREFIX=${HOME}/opt"
    ],
    "unix&&docker": [
      "INSTALL_PREFIX=/opt"
    ],
    "windows": [
      "INSTALL_PREFIX=$home/opt",
      "MAX_JOBS=(($env:CPU_COUNT-1))"
    ]
  },
  "conditional_environment_variable": {
    "all_os": [
      "run_test=1",
      "static_analysis=0",
      "pvs_static_analysis=0",
      "clang_tidy_static_analysis=0",
      "CMAKE_GENERATOR=Ninja",
      "CMAKE_BUILD_PARALLEL_LEVEL=${MAX_JOBS}",
      "GOPATH=${INSTALL_PREFIX}/gopath",
      "CPATH=${INSTALL_PREFIX}/include"
    ],
    "unix": [
      "CC=/usr/bin/cc",
      "CXX=/usr/bin/c++",
      "CFLAGS=-march=native",
      "CXXFLAGS=-march=native",
      "LD_LIBRARY_PATH=${INSTALL_PREFIX}/cuda/lib64:${INSTALL_PREFIX}/lib:${INSTALL_PREFIX}/python/lib:/usr/local/lib",
      "LIBRARY_PATH=${LD_LIBRARY_PATH}",
      "PKG_CONFIG_PATH=${INSTALL_PREFIX}/lib/pkgconfig",
      "CBUILD_PYTHON_EXE=${INSTALL_PREFIX}/python/bin/python3",
      "PATH=${INSTALL_PREFIX}/bin:${INSTALL_PREFIX}/python/bin",
      "PYTHONPATH=${INSTALL_PREFIX}/lib/python3.9/site-packages:${PYTHONPATH+:}"
    ],
    "unix&&new_gcc": [
      "CC=${INSTALL_PREFIX}/gcc/releases/gcc-10.2.0/bin/gcc",
      "CXX=${INSTALL_PREFIX}/gcc/releases/gcc-10.2.0/bin/g++",
      "LD_LIBRARY_PATH=${INSTALL_PREFIX}/gcc/releases/gcc-10.2.0/lib64:${INSTALL_PREFIX}/gcc/releases/gcc-10.2.0/lib:${LD_LIBRARY_PATH}",
      "PATH=${INSTALL_PREFIX}/gcc/releases/gcc-10.2.0/bin:${PATH}"
    ],
    "windows": [
      "CBUILD_PYTHON_EXE=C:/Python39/python.exe"
    ],
    "centos": [
      "CC=gcc",
      "CXX=g++",
      "FC=gfortran"
    ],
    "archlinux&&!docker": [
      "CC=/usr/bin/gcc-10",
      "CXX=/usr/bin/g++-10",
      "FC=/usr/bin/gfortran-10",
      "CUDA_HOME=/opt/cuda",
      "CUDAToolkit_ROOT=/opt/cuda",
      "CUDACXX=${CUDA_HOME}/bin/nvcc"
    ],
    "ubuntu&&use_libcxx": [
      "CXXFLAGS=-nostdinc++ -I/usr/lib/llvm-9/include/c++/v1",
      "LDFLAGS=-nodefaultlibs -L/usr/lib/llvm-9/lib -lc++ -lc -lm -lc++abi -lgcc_s -lgcc"
    ],
    "ubuntu": [
      "CC=/usr/bin/gcc-9",
      "CXX=/usr/bin/g++-9",
      "FC=/usr/bin/gfortran-9",
      "CUDA_HOME=/usr/local/cuda",
      "CUDAToolkit_ROOT=/usr/local/cuda",
      "CUDACXX=${CUDA_HOME}/bin/nvcc"
    ],
    "unix&&use_clang": [
      "CC=/usr/bin/clang",
      "CXX=/usr/bin/clang++"
    ],
    "feature_language_golang": [
      "GOPROXY=https://goproxy.io",
      "GO111MODULE=on"
    ],
    "!debug_build": [
      "BUILD_TYPE=Release"
    ],
    "debug_build": [
      "BUILD_TYPE=Debug"
    ]
  }
}
