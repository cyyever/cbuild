{
  "conditional_base_environment_variable": {
    "unix": [
      "MAX_JOBS=$((CPU_COUNT-1))"
    ],
    "unix&&!docker": [
      "INSTALL_PREFIX=${HOME}/opt"
    ],
    "unix&&docker": [
      "INSTALL_PREFIX=/opt"
    ],
    "windows": [
      "INSTALL_PREFIX=$home/opt",
      "MAX_JOBS=(($env:CPU_COUNT-1))"
    ]
  },
  "conditional_environment_variable": {
    "all_os": [
      "run_test=0",
      "static_analysis=0",
      "pvs_static_analysis=0",
      "clang_tidy_static_analysis=0",
      "CMAKE_EXPORT_COMPILE_COMMANDS=1",
      "CMAKE_GENERATOR=Ninja",
      "CMAKE_BUILD_PARALLEL_LEVEL=${MAX_JOBS}",
      "GOPATH=${INSTALL_PREFIX}/gopath",
      "CPATH=${INSTALL_PREFIX}/include",
      "CUDAARCHS=75"
    ],
    "all_os&&!docker": [
      "run_test=1"
    ],
    "unix": [
      "CC=/usr/bin/cc",
      "CXX=/usr/bin/c++",
      "FC=gfortran",
      "CFLAGS=-march=native",
      "CXXFLAGS=-march=native",
      "LD_LIBRARY_PATH=${INSTALL_PREFIX}/cuda/lib:${INSTALL_PREFIX}/cuda/lib64:${INSTALL_PREFIX}/lib:${INSTALL_PREFIX}/python/lib:/usr/local/lib:${INSTALL_PREFIX}/lib64:${LD_LIBRARY_PATH:-}",
      "LIBRARY_PATH=${LD_LIBRARY_PATH}:${LIBRARY_PATH:-}",
      "PKG_CONFIG_PATH=${INSTALL_PREFIX}/lib64/pkgconfig:${INSTALL_PREFIX}/lib/pkgconfig:${PKG_CONFIG_PATH:-}",
      "PATH=${INSTALL_PREFIX}/bin:${INSTALL_PREFIX}/python/bin:${PATH:-}",
      "PYTHONPATH=${INSTALL_PREFIX}/lib/python3.9/site-packages:${PYTHONPATH:-}",
      "CBUILD_PYTHON_EXE=${INSTALL_PREFIX}/python/bin/python3"
    ],
    "freebsd":[
      "PATH=/compat/linux/bin:${PATH:-}",
      "CPATH=${CPATH}:/usr/local/include"
    ],
    "unix&&machine_learning_compilers": [
      "CC=/usr/bin/clang",
      "CXX=/usr/bin/clang++"
    ],
    "ubuntu&&machine_learning_compilers": [
      "CUDA_HOST_COMPILER=/usr/bin/g++-9",
      "CUDAHOSTCXX=/usr/bin/g++-9"
    ],
    "windows": [
      "CBUILD_PYTHON_EXE=C:/Python39/python.exe",
      "PATH=${PATH};C:\\tools\\msys64\\usr\\bin;C:\\tools\\msys64"
    ],
    "centos": [
      "CC=/opt/rh/gcc-toolset-10/root/bin/gcc",
      "CXX=/opt/rh/gcc-toolset-10/root/bin/g++",
      "FC=/opt/rh/gcc-toolset-10/root/bin/gfortran"
    ],
    "archlinux&&!machine_learning_compilers": [
      "CC=/usr/bin/gcc-10",
      "CXX=/usr/bin/g++-10"
    ],
    "archlinux&&machine_learning_compilers": [
      "CUDA_HOST_COMPILER=/usr/bin/g++-10",
      "CUDAHOSTCXX=/usr/bin/g++-10"
    ],
    "archlinux&&!docker": [
      "CUDA_HOME=/opt/cuda"
    ],
    "archlinux&&docker": [
      "CBUILD_PYTHON_EXE=/usr/bin/python3",
      "CUDA_HOME=${INSTALL_PREFIX}/CUDA"
    ],
    "ubuntu&&!machine_learning_compilers&&!docker": [
      "CC=/usr/bin/gcc-9",
      "CXX=/usr/bin/g++-9"
    ],
    "ubuntu": [
      "CUDA_HOME=/usr/local/cuda"
    ],
    "feature_language_golang": [
      "GOPROXY=https://goproxy.io",
      "GO111MODULE=on"
    ],
    "!debug_build": [
      "BUILD_TYPE=Release"
    ],
    "debug_build": [
      "BUILD_TYPE=Debug"
    ]
  }
}
