{
  "archlinux": {
    "group_package": true
  },
  "all_os": {
    "git_url": "git@github.com:kovidgoyal/kitty.git",
    "environment_variable": [
      "LDFLAGS=-L/usr/local/lib -L/usr/lib",
      "static_analysis=1",
      "CC=gcc"
    ],
    "build_languages": [
      "python"
    ]
  },
  "system_package_dependency": {
    "ubuntu": [
      "libdbus-1-dev",
      "libgl1-mesa-dev",
      "libxcb-xinerama0-dev",
      "librsync-dev",
      "liblcms2-dev",
      "libxkbcommon-x11-dev",
      "dbus",
      "libharfbuzz-dev",
      "libx11-xcb-dev",
      "libxrandr-dev"
    ],
    "freebsd": [
      "xorg",
      "dbus",
      "ncurses",
      "x11/startup-notification",
      "harfbuzz",
      "lcms2",
      "libxkbcommon",
      "wayland-protocols"
    ],
    "archlinux": [
      "lcms2",
      "mesa",
      "libxkbcommon-x11",
      "librsync",
      "kitty"
    ],
    "pip": [
      "sphinx"
    ],
    "fedora": [
      "harfbuzz-devel",
      "lcms2-devel",
      "fontconfig-devel",
      "mesa-libGL-devel",
      "libxkbcommon-devel",
      "libXrandr-devel",
      "libXinerama-devel",
      "libXcursor-devel",
      "libxkbcommon-x11-devel",
      "dbus-devel",
      "libXi-devel"
    ],
    "centos": [
      "lcms2-devel",
      "fontconfig-devel",
      "mesa-libGL-devel",
      "libxkbcommon-devel",
      "libXrandr-devel",
      "libXinerama-devel",
      "libXcursor-devel",
      "libxkbcommon-x11-devel",
      "dbus-devel",
      "libXi-devel"
    ],
    "unix": [
      "rsync"
    ]
  },
  "dependency": [
    "harfbuzz",
    "openssl"
  ]
}
