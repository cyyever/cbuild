{
  "git_url": "git@github.com:NVIDIA/DALI.git",
  "cache_time": 30,
  "main_language": "c",
  "reuse_build": true,
  "environment_variable": [
    "run_test=0",
    "no_install=1"
  ],
  "conditional_environment_variable": {
    "windows": [
      "PATH=C:/Program Files/LLVM/bin;${PATH}"
    ]
  },
  "conditional_new_feature": {
    "unix": [
      "machine_learning_compilers"
    ],
    "support_cuda": [
      "cuda"
    ]
  },
  "dependency": [
    "torchvision",
    "ffmpeg",
    "protobuf",
    "opencv"
  ],
  "ignored_git_submodules": [
    "third_party/pybind11"
  ],
  "cmake_options": "-DFFMPEG_ROOT_DIR=${INSTALL_PREFIX} -DBUILD_TEST=on -DBUILD_BENCHMARK=off -DBUILD_LIBTIFF=off -DBUILD_LIBSND=off -DProtobuf_USE_STATIC_LIBS=off -DBUILD_OPENCV=on -DDALI_CLANG_ONLY=off -DBUILD_CUFILE=ON -DBUILD_LIBTAR=off -DBUILD_NVDEC=on -DBUILD_FFMPEG=on -DBUILD_LMDB=off -DBUILD_FFTS=off -DBUILD_CFITSIO=off -DNVJPEG_ROOT_DIR=${CUDA_HOME} -DBUILD_CVCUDA=off",
  "conditional_cmake_options": {
    "sanitizer": "-DBUILD_WITH_UBSAN=on -DBUILD_WITH_LSAN=on -DBUILD_WITH_ASAN=on"
  },
  "system_package_dependency": {
    "ubuntu": [
      "libsndfile1-dev",
      "libclang-dev"
    ],
    "pip": [
      "clang",
      "protobuf"
    ]
  }
}
