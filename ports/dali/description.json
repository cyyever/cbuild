{
  "git_url": "git@github.com:cyyever/DALI.git",
  "remote_git_url": "git@github.com:NVIDIA/DALI.git",
  "remote_git_branch": "main",
  "cache_time": 30,
  "main_language": "c",
  "reuse_build": true,
  "environment_variable": [
    "run_test=0",
    "py_pkg_name=nvidia-dali-cuda110",
    "static_analysis=0",
    "clang_tidy_static_analysis=1",
    "clang_tidy_fix=0"
  ],
  "conditional_new_feature": {
    "unix": [
      "machine_learning_compilers"
    ],
    "support_cuda": [
      "cuda"
    ]
  },
  "conditional_dependency": {
    "!docker": [
      "dali_extra:main"
    ]
  },
  "dependency": [
    "torchvision:cyy",
    "ffmpeg[shared_lib]",
    "opencv:cyy",
    "libtiff"
  ],
  "ignored_git_submodules": [
    "third_party/pybind11"
  ],
  "cmake_options": "-DFFMPEG_ROOT_DIR=${INSTALL_PREFIX} -DBUILD_TEST=on -DBUILD_BENCHMARK=off -DBUILD_LIBTIFF=on -DBUILD_LIBSND=off -DProtobuf_USE_STATIC_LIBS=off -DBUILD_OPENCV=off -DDALI_CLANG_ONLY=off -DBUILD_CUFILE=off -DCUDA_TARGET_ARCHS=${CUDAARCHS} -DBUILD_LIBTAR=off",
  "feature_cmake_options": {
    "sanitizer": "-DBUILD_WITH_UBSAN=on -DBUILD_WITH_LSAN=on -DBUILD_WITH_ASAN=on"
  },
  "system_package_dependency": {
    "ubuntu": [
      "libsndfile1-dev",
      "libclang-dev"
    ],
    "pip": [
      "clang"
    ]
  }
}
