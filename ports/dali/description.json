{
  "git_url": "git@github.com:NVIDIA/DALI.git",
  "cache_time": 30,
  "default_build_script": "c",
  "dependency": [
    "torchvision:cyy",
    "ffmpeg[shared_lib]:__cbuild_most_recent_git_tag",
    "opencv[full]:__cbuild_most_recent_git_tag"
  ],
  "ignored_git_submodules": [
    "third_party/spdlog",
    "third_party/pybind11"
  ],
  "conditional_environment_variable": {
    "linux": [
      "CMAKE_CXX_COMPILER=/usr/bin/clang++",
      "CMAKE_C_COMPILER=/usr/bin/clang"
    ]
  },
  "cmake_options": "-DFFMPEG_ROOT_DIR=${INSTALL_PREFIX} -DCUDA_TARGET_ARCHS='75;80' -DProtobuf_USE_STATIC_LIBS=off -DBUILD_TEST=on -DBUILD_BENCHMARK=on -DBUILD_LIBTIFF=off -DBUILD_LIBSND=off ",
  "system_package_dependency": {
    "ubuntu": [
      "libsndfile1-dev",
      "libclang-11-dev"
    ],
    "pip": [
      "clang"
    ]
  }
}
