{
  "git_url": "git@github.com:python/cpython.git",
  "cache_time": 30,
  "environment_variable": [
    "INSTALL_SUBDIR=python",
    "static_analysis=0"
  ],
  "conditional_environment_variable": {
    "macos": [
      "PKG_CONFIG_PATH=$(brew --prefix openssl)/lib/pkgconfig",
      "CPPFLAGS=-I$(brew --prefix readline)/include",
      "LDFLAGS=-L$(brew --prefix readline)/lib"
    ]
  },
  "build_languages": [
    "c"
  ],
  "all_branches": {
    "unix": {
      "configure_options": [
        "--enable-shared --with-system-expat --with-system-ffi --with-ensurepip=yes"
      ],
      "conditional_configure_options": {
        "debug_build": [
          "--with-pydebug"
        ],
        "!debug_build": [
          "--enable-optimizations"
        ]
      },
      "default_build_script": "c"
    },
    "windows": {
      "group_package": true
    }
  },
  "system_package_dependency": {
    "centos": [
      "bzip2-devel",
      "xz-devel",
      "libffi-devel",
      "readline-devel",
      "sqlite-devel",
      "openssl-devel",
      "expat-devel"
    ],
    "fedora": [
      "bzip2-devel",
      "libffi-devel",
      "readline-devel",
      "sqlite-devel",
      "openssl-devel",
      "expat-devel"
    ],
    "freebsd": [
      "sqlite3"
    ],
    "ubuntu": [
      "libexpat1-dev",
      "zlib1g-dev",
      "libffi-dev",
      "libreadline-dev",
      "liblzma-dev",
      "libncursesw5-dev",
      "libssl-dev",
      "libsqlite3-dev",
      "tk-dev",
      "libgdbm-dev",
      "libc6-dev",
      "libbz2-dev"
    ],
    "archlinux": [
      "bzip2",
      "expat",
      "gdbm",
      "libffi",
      "libnsl",
      "libxcrypt",
      "openssl",
      "zlib",
      "bluez-libs",
      "mpdecimal",
      "sqlite",
      "tk"
    ],
    "macos": [
      "openssl",
      "bzip2",
      "expat",
      "gdbm",
      "libffi",
      "openssl",
      "zlib",
      "readline",
      "sqlite"
    ]
  }
}
