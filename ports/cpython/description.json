{
  "windows": {
    "group_package": true
  },
  "unix": {
    "git_url": "git@github.com:python/cpython.git",
    "git_branch": "v3.10.10",
    "cache_time": 60,
    "environment_variable": [
      "INSTALL_SUBDIR=python",
      "static_analysis=0",
      "no_reconf=1",
      "slow_static_analysis=1",
      "uninstalled_pip_pkgs=setuptools"
    ],
    "conditional_environment_variable": {
      "macos": [
        "PKG_CONFIG_PATH=$(brew --prefix openssl)/lib/pkgconfig:$(brew --prefix libffi)/lib/pkgconfig",
        "CPPFLAGS=-I$(brew --prefix readline)/include -I$(brew --prefix xz)/include",
        "LDFLAGS=-L$(brew --prefix readline)/lib -L$(brew --prefix xz)/lib"
      ],
      "freebsd": [
        "LDFLAGS=-L/usr/local/lib"
      ]
    },
    "main_language": "c",
    "configure_options": [
      "--enable-shared --with-system-expat --with-ensurepip=yes"
    ],
    "conditional_configure_options": {
      "debug_build": [
        "--with-pydebug"
      ],
      "!debug_build": [
        "--enable-optimizations"
      ],
      "!macos": [
        "--with-system-ffi"
      ]
    },
    "depedency": [
      "openssl",
      "zlib-ng"
    ]
  },
  "system_package_dependency": {
    "windows": [
      "python"
    ],
    "centos": [
      "bzip2-devel",
      "xz-devel",
      "libffi-devel",
      "readline-devel",
      "sqlite-devel",
      "expat-devel"
    ],
    "fedora": [
      "bzip2-devel",
      "libffi-devel",
      "readline-devel",
      "sqlite-devel",
      "expat-devel"
    ],
    "freebsd": [
      "sqlite3"
    ],
    "ubuntu": [
      "libexpat1-dev",
      "libffi-dev",
      "libreadline-dev",
      "liblzma-dev",
      "libncursesw5-dev",
      "libssl-dev",
      "libsqlite3-dev",
      "tk-dev",
      "libgdbm-dev",
      "libc6-dev",
      "libbz2-dev"
    ],
    "archlinux": [
      "bzip2",
      "expat",
      "gdbm",
      "libffi",
      "libnsl",
      "libxcrypt",
      "bluez-libs",
      "mpdecimal",
      "sqlite",
      "tk"
    ],
    "macos": [
      "python3",
      "bzip2",
      "expat",
      "xz",
      "gdbm",
      "readline",
      "libffi",
      "sqlite"
    ]
  }
}
